<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <title>Courses</title>

    <style>
        .custom-container {
            width: 100%;
            max-width: 400px;
        }

        .custom-container .card {
            border: 1px solid #FFA823;
        }

        .custom-container:hover .card {
            animation: border-rotate 1s infinite;
        }

        .custom-container .card-title {
            background: linear-gradient(90deg, #FFA823, #f200ff, #FFA823, #FFA823, #f200ff, #ff0000, #FFA823, red);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-size: 300% 300%;
            transition: background-position 0.5s;
        }

        .custom-container:hover .card-title {
            animation: rgbWave 5s infinite;
        }

        .pointsInfo {
            background-color: #FFA823;
            border-radius: 5px;
            padding: 8px;
            min-width: 40px;
            display: flex;
            justify-content: center;
        }

        .pointsInfo .points {
            color: white;
        }

        @keyframes rgbWave {
            0% {
                background-position: 0% 50%;
            }

            50% {
                background-position: 100% 50%;
            }

            100% {
                background-position: 0% 50%;
            }
        }

        @keyframes border-rotate {
            0% {
                border-color: #FFA823;
            }

            25% {
                border-color: #ffffff;
            }

            50% {
                border-color: #FFA823;
            }

            75% {
                border-color: #ffffff;
            }

            100% {
                border-color: #FFA823;
            }
        }

        .textSmall {
            font-size: small;
        }
    </style>

</head>

<body>

    <nav class="navbar">
        <div class="container-fluid">
            <img src="assets/img/newLogo.png" alt="" width="50">
            <form class="d-flex">
                <ul class="nav justify-content-end">
                    <li class="nav-item">
                        <a class="nav-link" href="/to-user">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="/to-jobs">Jobs</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/journal">Journal</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/to-course">Course</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/to-chat">Chatbot</a>
                    </li>
                </ul>
            </form>
        </div>
    </nav>

    <div class="container">
        <div class="d-flex justify-content-center mt-5">
            <div>
                <h1>Courses</h1>
            </div>
        </div>
    </div>

    <div class="container mt-5">
        <div class="d-flex justify-content-center flex-wrap ">

            <% courses.forEach(course=> { %>
                <form action='/course-track' method="get">
                    <input type="hidden" name="courseId" value="<%= course.id %>">
                    <div class="col-md-6 col-lg-4 mb-4 custom-container" style="flex-shrink: 0;margin-left: 100px;margin-right: 100px;">
                        <div class="card" style="width: 400px;height: 300px;">
                            <div class="card-body">
                                <div class="mb-3">
                                    <p class="card-subtitle text-muted fs-7">Course</p>
                                </div>
                                <div class="mb-3">
                                    <p class="card-title fs-5">
                                        <%= course.name %>
                                    </p>
                                </div>
                                <div class="mb-3">
                                    <p class="card-text text-muted textSmall">
                                        <%= course.description %>
                                    </p>
                                </div>
                                <div class="d-flex align-items-center mb-3">
                                    <div class="me-3">
                                        <img src="assets/img/defaultProfile.png" alt="Profile Picture"
                                            class="rounded-circle" width="50" height="50">
                                    </div>
                                    <div>
                                        <h6 class="mb-2 text-muted textSmall">Name</h6>
                                        <p class="mb-0 text-muted textSmall">Profession</p>
                                    </div>
                                </div>
                                <div class="d-flex justify-content-between align-items-center">
                                    <div class="pointsInfo">
                                        <p class="points" style="margin: 0;">
                                            <%= course.point %> Points
                                        </p>
                                    </div>
                                    <div>
                                        <button class="btn btn-outline-dark" type="submit">Start</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
                <% }) %>


        </div>
    </div>
</body>

</html>